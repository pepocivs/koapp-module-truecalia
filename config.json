        "required": true,
        "label": "To"
      }
    },
    {
      "type": "input",
      "key": "weeks",
      "templateOptions": {
        "description": "Weeks",
        "pattern": "^[0-9]+$",
        "required": false,
        "label": "Weeks"
      }
    },
    {
      "type": "select",
      "key": "firstDay",
      "templateOptions": {
        "description": "Select next day to get Trips",
        "label": "Next day to search",
        "options": [
          {"name": "Monday",    "value": "monday" },
          {"name": "Tuesday",   "value": "tuesday" },
          {"name": "Wednesday", "value": "wednesday" },
          {"name": "Thrusday",  "value": "thrusday" },
          {"name": "Friday",    "value": "friday" },
          {"name": "Saturday",  "value": "saturday" },
          {"name": "Sunday",    "value": "sunday" }
        ]
      }
    },
    {
      "type": "input",
      "key": "nDays",
      "templateOptions": {
        "description": "Number of days to get back",
        "pattern": "^[0-9]+$",
        "required": false,
        "label": "Number of days to get back"
      }
    }
  ]
